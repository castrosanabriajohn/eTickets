@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "List of all users";
}
<div class="row">
    <div class="col-md-6 offset-md-3">
        <p>
            <h4>List of all users</h4>
        </p>
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.UserName)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ApplicationUser applicationUser in Model)
                {
                    <tr>
                        <td class="align-middle"> @Html.DisplayFor(modelItem => applicationUser.FullName) </td>
                        <td class="align-middle"> @Html.DisplayFor(modelItem => applicationUser.UserName) </td>
                        <td class="align-middle"> @Html.DisplayFor(modelItem => applicationUser.Email) </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
